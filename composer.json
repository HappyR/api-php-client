{
    "name": "happyr/api-php-client",
    "type": "library",
    "description": "Happyr public API client library. ",
    "keywords": ["Happyr", "API", "Client"],
    "homepage": "http://developer.happyr.com/php-libraries/happyrecruiting-api-client",
    "license": "MIT",
    "authors": [
        {
            "name": "Tobias Nyholm",
            "email": "tobias.nyholm@gmail.com"
        }
    ],
    "require": {
        "php": "^5.5 || ^7.0",
        "php-http/httplug": "^1.0",
        "php-http/client-common": "^1.1",
        "php-http/discovery": "^1.0",
        "webmozart/assert": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.5 || ^5.4",
        "php-http/message-factory": "^1.0.2",
        "php-http/curl-client": "^1.6",
        "php-http/message": "^1.0",
        "guzzlehttp/psr7": "^1.3"
    },
    "autoload": {
        "psr-4": { "Happyr\\ApiClient\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Happyr\\ApiClient\\Test\\": "tests/" }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml"
    }
}
